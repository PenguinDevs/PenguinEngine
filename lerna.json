{
  "packages": [
    "src/*",
    "tools/*"
  ],
  "command": {
    "publish": {
      "verifyAccess": false
    },
    "version": {
      "conventionalCommits": true,
      "createRelease": "github",
      "message": "chore(release): %s [skip ci]",
      "ignoreChanges": [
        "**/*.md",
        "**/package-lock.json"
      ]
    }
  },
  "version": "independent",
  "$schema": "node_modules/lerna/schemas/lerna-schema.json"
}